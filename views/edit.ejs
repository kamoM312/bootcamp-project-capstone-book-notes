<form id="myForm" action="/update" method="post">

    <input type="hidden" name="id" value="<%= review.id %>">

    <label for="name">Name: </label>
    <input type="text" name="name" id="name" value="<%= review.name %>">
    
    <label for="coverurl">Isbn: </label>
    <input type="text" name="isbn" id="isbn" value="<%= review.coverurl %>">

    <!-- <label for="date">Date: </label> -->
    <input type="hidden" name="date" id="date" value="<%= review.date %>">

    <label for="description">Description: </label>
    <input type="text" name="description" id="description" value="<%= review.description %>">

    <label for="review">Review: </label>
    <input type="text" name="review" id="review" value="<%= review.review %>">

    <label for="rating">Rating: </label>
    <input type="text" name="rating" id="rating" value="<%= review.rating %>">

    <input type="submit" value="submit">
</form>

