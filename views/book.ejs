<%- include("partials/header.ejs") %>

<header>
    <h1>Book Reviews</h1>
</header>
<div class="main-container flex-vert">


    <% if(locals.book) { %>
            <div class="book flex-row">
                <div class="left">
                    <img src="<%= book.cover %>" alt="image of book cover" class="cover">
                </div>
                <div class="content flex-vert">
                    <div class="title">
                        <h1><%= book.name %></h1>
                    </div>
                    <div class="date-and-rating">
                        <div class="date">
                            <p>Date created: <%= book.date %></p>
                        </div>
                        <div class="rating">
                            <p>Rating: <%= book.rating %> /5</p>
                        </div>
                    </div>
                    <div class="review">
                        <p><%= book.review %></p>
                    </div>

                    <div>
                        <a class="view" href="/"><div class="fas fa-window-close"></div></a>
                    </div>
                   
                    <!-- <form>

                    </form> -->
                </div>
            </div>
    <% } %>
</div>